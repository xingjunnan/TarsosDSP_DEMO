#!/usr/bin/ruby

############################
#converts a textile file to html
############################
#call like this:
#
# textile2html input.textile output.html
#
############################

require 'rubygems'
require 'RedCloth'

input_file = ARGV[0]
output_file = ARGV[1]

file = File.open(input_file, "r")
contents = file.read
file.close

html = RedCloth.new(contents).to_html

File.open(output_file, 'w') {|f| f.write(html) }